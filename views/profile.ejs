    <section id="body">
   
    <section id="profile-details">
  <div class="profilepic"></div>

  <div class="engagements">
    <h1><%= user.name %></h1>
    <h4><%= user.email %></h4>
  </div>

  <div class="actions">
    <form action="/signout" method="post" id="signout">
      <button type="submit">Sign out</button>
    </form>
  </div>
</section>

                        <hr>
                        <section id="container">
                        <section id="posts-list">
   <%posts.forEach(post=>{%>
                            <section id="post">
                              <section id="upper">
                                <section id="left">
                                  <div class="account"></div>
                                  <div class="time">
                                    <span><span><%= user?.name || 'Unknown User' %></span>
                                  </span>
                                  <span><%= post.timeago || 'N/A' %></span>
                      
                                  </div>
                                </section>
                            
                              </section>
                              <section id="down">
                                <section id="text">
                                  <p><%= post.message %></p>
                                </section>
                                <section id="engagements">
                                  <div class="like">
                                    <form action="/dashboard/<%= post._id%>/like" method="post">
                                    <button type="submit" id="like">
                                             <img src="/Images/like.png" alt="">
                                      
                                    </button>
                                  </form>
                                  <span><%= post.like%></span>
                                  </div>
                                  <div class="dislike">
                                    <form action="/dashboard/<%= post._id%>/dislike" method="post">
                                    <button type="submit" id="like">
                                      <img src="/Images/dislike.png" alt="">
                                      
                                    </button>
                                    </form>
                                 <div class="span">
                                  <span> <%= post.dislike%></span>
                                 </div>
                                  </div>
                                  <div class="share">
                                    
                                    <button type="submit" id="share-btn-<%= post._id %>" class="share-btn">
                                    <img src="/Images/share.png" alt="" > 
                                    </button>
                                  
                                    </div>
                                    <section id="share-popup-<%= post._id %>" class="share-popup">
                                      <section id="share-popup-content">
                                        <span id="close-popup-<%= post._id %>" class="close-btn">&times;</span>
                      
                                        <h1>Share this file</h1>
                                        <input type="text" readonly value="http://localhost:<%= PORT%>/dashboard/<%=post._id%>/">
                                      </section>
                                    </section>
                                  
                                  <div class="comment">
                                    <a href="/comment/<%=post._id%>">
                                    <button id="comment-<%=post._id%>" class="comment-btn">
                                      <img src="/Images/comment.png" alt="">         
                                    </button>           
                                  </a>   
                                  </div>
                                  
                              
                                </section>
                              </section>
                            </section>
                          <%})%>
                        </section>
                                                  
                        </section>
        </section>
      </section>

    </section>
                        </section>
    </section>
    </section>
    <script src="/js/loading2.js"></script>
    </body>
