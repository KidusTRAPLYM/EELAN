<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/CSS/variables.css" />
    <link rel="stylesheet" href="/CSS/preloader.css" />
    <link rel="stylesheet" href="/CSS/main.css" />
    <link rel="stylesheet" href="/CSS/dashboard-traply.css" />
    <!--FONT FAMILY-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Prata&display=swap"
      rel="stylesheet"
    />
    <title>Post</title>
  </head>
  <body
    style="
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 200px;
        flex-wrap: wrap;
      }
    "
  >
    <section id="post">
      <section id="upper">
        <section id="left">
          <div class="account"></div>
          <div class="time">
            <span
              ><span><%= post.userId?.name || 'Unknown User' %></span>
            </span>
            <span><%= post.timeago || 'N/A' %></span>
          </div>
        </section>
      </section>
      <section id="down">
        <section id="text">
          <% if (post && post.message) { %>
          <p><%= post.message.trim() %></p>
          <% } else { %>
          <p>Message not found or is empty.</p>
          <% } %>
        </section>

        <section id="engagements">
          <div class="like">
            <form action="/dashboard/<%= post._id%>/like" method="post">
              <button type="submit" id="like">
                <img src="/Images/like.png" alt="" />
              </button>
            </form>
            <span><%= post.like%></span>
          </div>
          <div class="dislike">
            <form action="/dashboard/<%= post._id%>/dislike" method="post">
              <button type="submit" id="like">
                <img src="/Images/dislike.png" alt="" />
              </button>
            </form>
            <div class="span">
              <span> <%= post.dislike%></span>
            </div>
          </div>
          <div class="share">
            <button
              type="submit"
              id="share-btn-<%= post._id %>"
              class="share-btn"
            >
              <img src="/Images/share.png" alt="" />
            </button>
          </div>
          <section id="share-popup-<%= post._id %>" class="share-popup">
            <section id="share-popup-content">
              <span id="close-popup-<%= post._id %>" class="close-btn"
                >&times;</span
              >

              <h1>Share this file</h1>
              <input
                type="text"
                readonly
                value="http://localhost:<%= PORT%>/dashboard/<%=post._id%>/"
              />
            </section>
          </section>

          <div class="comment">
            <a href="/comment/<%=post._id%>">
              <button id="comment-<%=post._id%>" class="comment-btn">
                <img src="/Images/comment.png" alt="" />
              </button>
            </a>
          </div>
        </section>
      </section>
    </section>
  </body>
</html>
