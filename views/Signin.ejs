<script>
  const themeToggle = document.getElementById("themeToggle");
 const themeIcon = themeToggle.querySelector("span");
 
 // Load saved theme on page load
 const savedTheme = localStorage.getItem("theme");
 if (savedTheme) {
     document.documentElement.setAttribute("data-theme", savedTheme);
     themeIcon.textContent = savedTheme === "dark" ? "‚òÄÔ∏è" : "üåô";
 }
 
 // Toggle function
 themeToggle.addEventListener("click", () => {
     const currentTheme = document.documentElement.getAttribute("data-theme");
     const newTheme = currentTheme === "dark" ? "light" : "dark";
     document.documentElement.setAttribute("data-theme", newTheme);
     localStorage.setItem("theme", newTheme); // Save theme for all pages
     themeIcon.textContent = newTheme === "dark" ? "‚òÄÔ∏è" : "üåô";
 });

   const canvas = document.getElementById('bg');
const ctx = canvas.getContext('2d');
let w = canvas.width = window.innerWidth;
let h = canvas.height = window.innerHeight;

const dots = [];
const dotCount = 150; // more dots
function random(min,max){ return Math.random()*(max-min)+min; }

for(let i=0;i<dotCount;i++){
  dots.push({
    x: random(0,w),
    y: random(0,h),
    r: random(1,4),       // varying radius
    dx: random(-0.5,0.5), // faster movement
    dy: random(-0.5,0.5),
    alpha: random(0.3,0.8), // varying brightness
  });
}

function animate(){
  ctx.clearRect(0,0,w,h);
  dots.forEach(d=>{
    ctx.beginPath();
    ctx.arc(d.x,d.y,d.r,0,Math.PI*2);
    ctx.fillStyle = `rgba(59,130,246,${d.alpha})`;
    ctx.shadowColor = '#3b82f6';
    ctx.shadowBlur = 15;
    ctx.fill();
    d.x += d.dx;
    d.y += d.dy;
    if(d.x<0||d.x>w)d.dx*=-1;
    if(d.y<0||d.y>h)d.dy*=-1;
  });
  requestAnimationFrame(animate);
}
animate();

window.addEventListener('resize', ()=>{
  w = canvas.width = window.innerWidth;
  h = canvas.height = window.innerHeight;
});

   
   </script>
