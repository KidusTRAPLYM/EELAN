<script>
  let popupShown = false;
  let scrolledToBottom = false;
  let lastScrollY = window.scrollY;

  function showPopup() {
    if (!popupShown) {
      document.getElementById("exitPopup").classList.remove("hidden");
      popupShown = true;
    }
  }

  function closePopup() {
    document.getElementById("exitPopup").classList.add("hidden");
  }

  // Exit intent — top of screen
  document.addEventListener("mouseout", function (e) {
    if (e.clientY < 10) {
      showPopup();
    }
  });

  // Scroll detection
  window.addEventListener("scroll", () => {
    const currentScrollY = window.scrollY;
    const scrollHeight = document.documentElement.scrollHeight;
    const windowHeight = window.innerHeight;

    // User has scrolled down far enough
    if (currentScrollY > 100) {
      scrolledToBottom = true;
    }

    // Scrolled down and now scrolling up → show popup
    if (
      scrolledToBottom &&
      currentScrollY < lastScrollY
    ) {
      showPopup();
    }

    lastScrollY = currentScrollY;
  });
</script>


