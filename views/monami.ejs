    <section id="body" class="body">
      <h1>Monami</h1>
      <section id="main">
       <h4 style="color:red">Before continuing using monami, please read the terms of use by clicking <a href="/terms-of-use"> &nbsp; here.</a> </h4>
        </div>
        <% if (userChats && userChats.length > 0) { %>
  <% userChats.forEach(chat => { %>
    <div class="chat-entry">
      <p class="chat-settings"><strong>You:</strong> <%= chat.message %></p>
      <p class="chat-settings"><strong>Monami:</strong> <%= chat.response %></p>
    </div>
  <% }) %>
<% } else { %>
  <p>No past chats found.</p>
<% } %>

