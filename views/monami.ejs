<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Monami</title>
    <link rel="stylesheet" href="/CSS/variables.css" />
    <link rel="stylesheet" href="/CSS/monami.css">
    <link rel="stylesheet" href="/CSS/main.css" />
   
    <!--FONT FAMILY-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Prata&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    
    <section id="body" class="body">
      <h1>Monami</h1>
      <section id="main">
         <a href="/terms-of-use">
       <h4 style="color:red">Before continuing using monami, please read the terms of use by clicking here.</h4></a>
        </div>
        <% if (userChats && userChats.length > 0) { %>
  <% userChats.forEach(chat => { %>
    <div class="chat-entry">
      <p class="chat-settings"><strong>You:</strong> <%= chat.message %></p>
      <p class="chat-settings"><strong>Monami:</strong> <%= chat.response %></p>
    </div>
  <% }) %>
<% } else { %>
  <p>No past chats found.</p>
<% } %>
<form action="/monami" method="post" class="chat-form">
  <textarea
    name="message"
    id="messages"
    placeholder="What's wrong?"
  ></textarea>
  <button>âž¤</button>
</form>

      </section>
      
    </section>
  </body>
</html>
